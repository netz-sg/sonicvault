{
  "name": "sonicvault",
  "version": "1.0.0",
  "private": true,
  "description": "Self-Hosted Music Library Manager",
  "scripts": {
    "dev": "cd renderer && npx next dev -p 3000",
    "build": "cd renderer && npx next build",
    "start": "cd renderer && npx next start -p 3000",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "cd renderer && npx tsx lib/db/migrate.ts",
    "db:studio": "npx drizzle-kit studio"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": "^0.33.0",
    "music-metadata": "^10.0.0",
    "node-taglib-sharp": "^5.2.0",
    "sharp": "^0.33.0",
    "zustand": "^4.5.0",
    "@tanstack/react-query": "^5.0.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/uuid": "^10.0.0",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.24.0",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "postcss": "^8.4.0"
  }
}
